{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./app",
    "outDir": "../../dist",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "skipLibCheck": false,
    "stripInternal": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../../temp/factories",
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "entryModule": "app/editable-table/editable-table.module#EditableTableModule"
  }
}
