{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../../dist",
    "rootDir":"./editable-table",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "inlineSources": true,
    "target": "es2015",
    "skipLibCheck": false,
    "stripInternal": true,
    "noEmitHelpers": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "editable-table/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**/*",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../../temp/factories",
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "entryModule": "app/editable-table/editable-table.module#EditableTableModule"
  }
}
